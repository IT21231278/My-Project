<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="My Cart"
            android:textColor="#0C0808"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="318dp"
                android:layout_height="203dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/banana" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="165dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:text="product Name : Banana                              "
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="165dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:text="Quantity : 50KG                              "
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:textColor="#1B1A1A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="396dp"
            android:layout_height="77dp"
            app:cardBackgroundColor="#E3DADA"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We have good, high quality bananas. You can buy them in bulk.  We sell 1Kg at 200 LKR"
                android:textColor="#191818"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChangeItem"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#38C33E"
                android:text="change Item"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btndelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#38C33E"
                android:text="Delete"
                app:cornerRadius="30dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Details :"
            android:textColor="#0E0D0D"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub Total :                   0000.00"
            android:textColor="#121010"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shippingfree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping Fee :             350.00      "
            android:textColor="#121010"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Amount :            0000.00"
            android:textColor="#121010"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncontinewShopping"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:backgroundTint="#38C33E"
                android:text="Continue shopping"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btnoder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:backgroundTint="#38C33E"
                android:text="Place order"
                app:cornerRadius="30dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>