<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    >


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Shopping Cart"
            android:textColor="#0C0808"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="347dp"
                android:layout_height="221dp"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/corns" />

            <TextView
                android:id="@+id/namePro"
                android:layout_width="wrap_content"
                android:layout_height="141dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="product Name : Corns                                 "
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity :"
            android:textColor="#1B1A1A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/qtyPro"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:entries="@array/qty"/>


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Price Rs."
            android:textColor="#171616"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="42dp"
          >

            <TextView
                android:id="@+id/pricePro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="0000.00"
                android:textSize="20sp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock Kg."
            android:textColor="#171616"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:id="@+id/stockPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="0kg"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping days"
            android:textColor="#171616"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="42dp"

           >

            <TextView
                android:id="@+id/shppingdaysPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="20sp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping Charge Rs."
            android:textColor="#171616"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="42dp"

          >

            <TextView
                android:id="@+id/shippingPricePro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="0000.00"
                android:textSize="20sp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnQtyUpDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#38C33E"
                android:text="Update Qty"
                app:cornerRadius="30dp" />


            <Button
                android:id="@+id/btnAddTocard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#38C33E"
                android:text="Add to Cart"
                app:cornerRadius="30dp" />
        </LinearLayout>


    </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>